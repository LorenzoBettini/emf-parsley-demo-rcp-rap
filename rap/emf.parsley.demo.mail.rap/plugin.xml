<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="mailapp.entrypoints"
         point="org.eclipse.rap.ui.entrypoint">
      <entrypoint
            id="mailapp.entrypoint"
            path="/mail"
            applicationId="emf.parsley.demo.mail.rap.application">
      </entrypoint>
   </extension>
   <extension
         id="emf.parsley.demo.mail.rap.application"
         point="org.eclipse.core.runtime.applications">
      <application
            visible="true"
            cardinality="singleton-global"
            thread="main">
         <run
               class="org.eclipse.emf.parsley.examples.mail.rcp.MailApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="EMF Parsley Mail RCP Perspective"
            class="org.eclipse.emf.parsley.examples.mail.rcp.Perspective"
            id="org.eclipse.emf.parsley.examples.mail.rcp.perspective">
      </perspective>
   </extension>

</plugin>
